<% cancel_path ||= contact.persisted? ? [:account, contact] : [:account, @client, :contacts] %>

<%= form_with model: contact, url: (contact.persisted? ? [:account, contact] : [:account, @client, :contacts]), local: true, class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_field', method: :first_name, options: {autofocus: true} %>
      <%= render 'shared/fields/text_field', method: :last_name %>
      <%= render 'shared/fields/email_field', method: :email %>
      <%= render 'shared/fields/trix_editor', method: :notes %>
      <%= render 'shared/fields/super_select', method: :department_id, options: {}, html_options: {},
        choices: @contact.valid_departments.map { |department| [department.label_string, department.id] } %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>
