<% if can? :read, Department.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :departments]),
    label: t('departments.navigation.label'),
  } do |p| %>
    <% p.icon do %>
      <i class="<%= t('departments.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>
